{
  "compilerOptions": {
    "target": "ES2022",
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "removeComments": true
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
